<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:onClick="drawPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="画点" />
    <Button
        android:onClick="drawCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="画圆" />
    <Button
        android:onClick="drawLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="画线" />
    <Button
        android:onClick="drawoval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="画椭圆" />
    <Button
        android:onClick="drawrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="画矩形" />
    <Button
        android:onClick="drawtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="画文本" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.example.administrator.test_view.view.ArcView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arcView"
        android:visibility="gone"/>
    <com.example.administrator.test_view.view.LineView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lineView"
        android:visibility="gone"/>
    <com.example.administrator.test_view.view.OvalView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ovalView"
        android:visibility="gone"/>
    <com.example.administrator.test_view.view.PointView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointView"
        android:visibility="gone"/>
    <com.example.administrator.test_view.view.RectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rectView"
        android:visibility="gone"/>
    <com.example.administrator.test_view.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myTextView"
        android:visibility="gone"/>
</RelativeLayout>
</LinearLayout>
